@model MainViewModel

@{
    ViewData["Title"] = "Home Page";
}

    @using (Html.BeginForm())  
    {                 
        @Html.TextBoxFor(a => a.SearchViewModel.SearchTerm, new {@class = "form-control"})          
       
        <div class="m-2 col text-center">
            <input type="submit" value="Search" class="btn btn-primary btn-lg" />  

        </div>
    }

<div class="text-center">
    <p>Recent</p>
    <table class="table table-striped">
        @foreach (var recent in Model.Recent.OrderBy(a => a.Rank))
    {
        <tr onclick="window.open('@recent.Uri', '_blank');">
            <td>
                <div>
                    @recent.Name
                </div>
            </td>
            <td>
                <div>
                    @recent.Description
                </div>
            </td>
            <td>
                <div>
                    @recent.Uri
                </div>
            </td>
        </tr>        
    }
    </table>
</div>

<div class="text-center">
    @if (Model.SearchViewModel.Resources != null)
    {
        <table class="table table-striped">
        @foreach (var searchResult in Model
                      .SearchViewModel.Resources.OrderBy(a => a.Rank))
        {
            <tr onclick="window.open('@searchResult.Uri', '_blank');">
                <td>
                    <div>
                        @searchResult.Name
                    </div>
                </td>
                <td>
                    <div>
                        @searchResult.Description
                    </div>
                </td>
                <td>
                    <div>
                        @searchResult.Uri
                    </div>
                </td>

            </tr>
        }
        </table>
    }
</div>
