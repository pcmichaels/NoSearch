@model MainViewModel

@{
    ViewData["Title"] = "Home Page";
}

@section scripts {
    <script type="text/javascript">
        function onchangeevent(value) {            
            if (value == null || value.trim() === '') {                
                document.getElementById("submitSearch").disabled = true;                
            } else {                
                document.getElementById("submitSearch").disabled = false;
            }
        }
    </script>
}

    @using (Html.BeginForm())  
    {                 
        <div class="row m-5">            
            <div class="col-sm-2"></div>
            <div class="col-sm-7">
                @Html.TextBoxFor(a => a.SearchViewModel.SearchTerm, new { 
                    @class = "form-control input-lg", 
                    @onkeyup = "onchangeevent(this.value);" 
                })                  
            </div>
       
            <div class="col-sm-2 text-start">
                <input type="image" src="assets/magnifier_t.png" id="submitSearch" value="Search" disabled class="btn btn-primary img-icon" />  

            </div>
        </div>
    }    

@if (Model.SearchViewModel.Resources == null)
{
    <div class="text-center">
        <p class="header-main">Recent</p>
        <table class="table table-striped">
            @foreach (var recent in Model.Recent.OrderBy(a => a.Rank))
            {
                <tr onclick="window.open('@recent.Uri', '_blank');">
                    <td>
                        <div>
                            @recent.Name
                        </div>
                    </td>
                    <td>
                        <div>
                            @recent.Description
                        </div>
                    </td>
                    <td>
                        <div>
                            @recent.Uri
                        </div>
                    </td>
                    <td>
                        <div>
                            @recent.DateAdded.Date.ToString("dd-MMM-yy")
                        </div>
                    </td>

                </tr>
            }
        </table>
    </div>
}
else
{

    <div class="text-center">
        <p class="header-main">Results</p>
        <table class="table table-striped">
            @foreach (var searchResult in Model
                                .SearchViewModel.Resources.OrderBy(a => a.Rank))
            {
                <tr onclick="window.open('@searchResult.Uri', '_blank');">
                    <td>
                        <div>
                            @searchResult.Name
                        </div>
                    </td>
                    <td>
                        <div>
                            @searchResult.Description
                        </div>
                    </td>
                    <td>
                        <div>
                            @searchResult.Uri
                        </div>
                    </td>

                </tr>
            }
        </table>    
    </div>
}
